<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SplashScreen">


    <LinearLayout
        android:id="@+id/frame_banner"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.think.runex.java.Customize.xBrannerImage
            android:id="@+id/imv_welcome_runex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/im_welcome_runex" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:text="เริ่มใช้งาน"
        android:minHeight="0dp"
        android:background="@drawable/state_active_with_rounded_4corners_button"
        android:paddingVertical="8dp"
        android:paddingHorizontal="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>