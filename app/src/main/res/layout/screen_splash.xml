<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.SplashScreen">


        <!--  Banner  -->
        <LinearLayout
            android:id="@+id/frame_banner"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.think.runex.java.Customize.Views.xBrannerImage
                android:id="@+id/imv_welcome_runex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/im_welcome_runex" />

        </LinearLayout>

        <!--  Preview image  -->
        <com.think.runex.java.Customize.Views.xBrannerImage
            android:id="@+id/imv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_onboarding" />

        <!--  Paragraph 1  -->
        <TextView
            android:id="@+id/v_paragraph_1"
            android:text="บันทึกและส่งระยะวิ่ง\nด้วยแอปฯ RUNEX"
            android:textSize="@dimen/textButton"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_height="wrap_content"/>

        <!--  Paragraph 2  -->
        <TextView
            android:id="@+id/v_paragraph_2"
            android:textSize="@dimen/textSmall"
            android:layout_marginTop="28dp"
            android:textColor="@android:color/black"
            android:text="แอพพลิเคชั่นสำหรับส่งระยะผลวิ่ง\nVirtual Run สำหรับสมาชิก Runex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_get_started"
            android:text="เริ่มใช้งาน"
            android:minHeight="0dp"
            android:background="@drawable/button_get_started_background"
            android:textStyle="bold"
            android:textSize="@dimen/textContent"
            android:layout_marginTop="46dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/white"
            android:paddingVertical="@dimen/buttonVerticalPadding"
            android:paddingHorizontal="@dimen/buttonHorizontalPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>