<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- full-view display -->
    <RelativeLayout
        android:id="@+id/full_view_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!-- Toolbar -->
        <FrameLayout
            android:id="@+id/frame_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_cancel_submit"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_close"
                app:tint="@color/textColorAccent" />

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@mipmap/ic_share"
                app:tint="@color/textColorAccent" />

        </FrameLayout>

        <!-- Frame map -->
        <FrameLayout
            android:id="@+id/frame_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_toolbar">

            <com.think.runex.java.Customize.Views.xMapViewGroup
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/runex_logo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/im_app_logo"
                android:visibility="invisible" />

            <include
                android:id="@+id/frame_debug"
                layout="@layout/frame_debug_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="28dp"
                android:visibility="gone" />


<!--            <LinearLayout-->
