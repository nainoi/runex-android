<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecordScreen">

    <com.jozzee.android.curvelayout.CurveLayout
        android:id="@+id/rac_view"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:elevation="8dp"
        app:curveFormat="convex"
        app:curveHeight="@dimen/space_56dp"
        app:curvesGravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_header_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_record" />

            <View
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="@color/overlayDark">

            </View>

            <RelativeLayout
                android:id="@+id/action_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_24dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_black"
                    android:layout_width="@dimen/space_48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/space_24dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_free"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="@dimen/space_24dp"
                    android:minWidth="@dimen/space_56dp"
                    android:minHeight="@dimen/space_24dp"
                    android:textAllCaps="false"
                    app:cornerRadius="@dimen/space_12dp"
                    app:iconTint="@android:color/white"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="@dimen/space_1dp" />
            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/imv_app_logo"
                style="@style/TextHeadLine.White"
                android:layout_width="@dimen/space_128dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imv_header_event"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_56dp"
                android:layout_marginBottom="@dimen/space_72dp"
                android:adjustViewBounds="true"
                android:gravity="center_horizontal"
                android:text="RUNEX"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.jozzee.android.curvelayout.CurveLayout>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_record"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="304dp"
        android:background="@drawable/bg_btn_record"
        android:elevation="@dimen/space_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_virtual_run_topic"
        android:layout_width="@dimen/space_48dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="@dimen/space_8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:tint="@color/icon"
        app:layout_constraintBottom_toTopOf="@+id/li"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_record">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="@dimen/space_96dp"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_8dp"
            android:layout_marginBottom="@dimen/space_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/space_8dp"
            app:cardElevation="@dimen/space_4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8dp">

                <View
                    android:id="@+id/gl_c_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_avg"
                    style="@style/TextBody2.Hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/gl_c_1"
                    android:layout_marginBottom="@dimen/space_4dp"
                    android:gravity="center_horizontal"
                    android:text="AVG PACE" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_avg_val"
                    style="@style/TextSubTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gl_c_1"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:gravity="center_horizontal"
                    android:text="15:33 /km" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="@dimen/space_96dp"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_8dp"
            android:layout_marginBottom="@dimen/space_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/space_8dp"
            app:cardElevation="@dimen/space_4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8dp">

                <View
                    android:id="@+id/gl_c_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_time"
                    style="@style/TextBody2.Hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/gl_c_2"
                    android:layout_marginBottom="@dimen/space_4dp"
                    android:gravity="center_horizontal"
                    android:text="TIME" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_time_val"
                    style="@style/TextSubTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gl_c_2"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:gravity="center_horizontal"
                    android:text="0:06:49"
                    android:textColor="@color/orange" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="@dimen/space_96dp"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_16dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/space_8dp"
            app:cardElevation="@dimen/space_4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8dp">

                <View
                    android:id="@+id/gl_c_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_distance"
                    style="@style/TextBody2.Hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/gl_c_3"
                    android:layout_marginBottom="@dimen/space_4dp"
                    android:gravity="center_horizontal"
                    android:text="DISTANCE" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_distance_val"
                    style="@style/TextSubTitle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gl_c_3"
                    android:layout_marginTop="@dimen/space_4dp"
                    android:gravity="center_horizontal"
                    android:text="2.5 KM" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>