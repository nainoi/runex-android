<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="18dp">

    <ImageView
        android:id="@+id/ic_activity_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_activity_type"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_my_event"
        app:tint="@android:color/white" />

    <LinearLayout
        android:id="@+id/frame_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_activity_type"
        android:layout_alignBottom="@+id/ic_activity_type"
        android:layout_toRightOf="@+id/ic_activity_type"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lb_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:layout_toEndOf="@+id/ic_activity_type"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="14 Nov 2019"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/lb_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lb_date"
            android:layout_alignTop="@+id/ic_activity_type"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:layout_toEndOf="@+id/ic_activity_type"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="10.50 กม. ใน 1:00:12"
            android:textColor="@color/materialBlack"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/lb_caption"
        style="@style/TextBody.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:layout_toEndOf="@+id/ic_activity_type"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/frame_contents"
        android:layout_alignBottom="@+id/frame_contents"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_trash"
        app:tint="@android:color/darker_gray" />

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/space_1dp"-->
    <!--        android:layout_below="@+id/ic_activity_type"-->
    <!--        android:layout_marginTop="@dimen/space_8dp"-->
    <!--        android:background="@color/line" />-->

</RelativeLayout>