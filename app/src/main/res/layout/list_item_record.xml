<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_activity_type"
        android:layout_width="@dimen/space_64dp"
        android:layout_height="@dimen/space_64dp"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_activity_type"
        android:scaleType="centerInside"
        android:src="@drawable/ic_my_event" />

    <TextView
        android:id="@+id/lb_distance"
        style="@style/TextBody2.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_activity_type"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:layout_toEndOf="@+id/ic_activity_type"
        android:maxLines="1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lb_date"
        style="@style/TextBody.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb_distance"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:layout_toEndOf="@+id/ic_activity_type"
        android:maxLines="1" />

    <TextView
        android:id="@+id/lb_caption"
        style="@style/TextBody.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb_date"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:layout_toEndOf="@+id/ic_activity_type" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1dp"
        android:layout_below="@+id/lb_caption"
        android:layout_marginTop="@dimen/space_12dp"
        android:background="@color/line" />

</RelativeLayout>