<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/ic_success"
        android:layout_width="match_parent"
        android:layout_marginBottom="22dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title"
        android:text="ยินดีด้วย!"
        android:textSize="32dp"
        android:textColor="@color/materialBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/content"
        android:text=" ส่งระยะเรียบร้อยแล้ว "
        android:textSize="18dp"
        android:textColor="@color/materialBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_finish"
        android:textColor="@android:color/white"
        android:paddingHorizontal="@dimen/buttonHorizontalPadding"
        android:textStyle="bold"
        android:paddingVertical="@dimen/buttonVerticalPadding"
        android:layout_marginTop="42dp"
        android:textSize="18dp"
        android:background="@drawable/state_active_with_rounded_4corners_button"
        android:text="จบการส่งผล"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>