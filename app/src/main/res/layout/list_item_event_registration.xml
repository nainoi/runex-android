<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_16dp">

    <TextView
        android:id="@+id/full_name_label"
        style="@style/Text.BodyHeading.Primary.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address_label"
        style="@style/Text.Body.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name_label"
        android:layout_marginTop="@dimen/space_4dp" />

    <TextView
        android:id="@+id/citizen_id_label"
        style="@style/Text.Body.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_label"
        android:layout_marginTop="@dimen/space_4dp" />

    <TextView
        android:id="@+id/phone_label"
        style="@style/Text.Body.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/citizen_id_label"
        android:layout_marginTop="@dimen/space_4dp" />

    <TextView
        android:id="@+id/event_name_label_confirm_register"
        style="@style/Text.Body.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_label"
        android:layout_marginTop="@dimen/space_4dp" />

    <TextView
        android:id="@+id/distance_label"
        style="@style/Text.Body.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_name_label_confirm_register"
        android:layout_marginTop="@dimen/space_4dp" />

    <TextView
        android:id="@+id/price_label"
        style="@style/Tex.tBodyHeading.Accent.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distance_label"
        android:layout_marginTop="@dimen/space_4dp" />

</RelativeLayout>