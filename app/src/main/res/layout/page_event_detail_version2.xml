<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true">

    <!-- Frame contents -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clickable="true">

            <!-- Frame content version 2 -->
            <LinearLayout
                android:id="@+id/frame_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame_toolbar"
                android:layout_margin="12dp"
                android:background="@drawable/background_gray_borders_with_soft_rounded_corners"
                android:orientation="vertical"
                android:padding="4dp">

                <include
                    android:id="@+id/vh_event"
                    layout="@layout/list_item_event_java"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/v_total_running_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="ระยะสะสม"
                    android:textColor="@color/textColorPrimary" />

                <LinearLayout
                    android:id="@+id/frame_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lb_total_running_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="0.00"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/textParagraphH1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lb_distance_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="กม."
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/textSmall" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/view_leader_board_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_contents"
                android:layout_marginHorizontal="12dp"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="@dimen/space_48dp">

                <ImageView
                    android:id="@+id/leader_board_icon"
                    android:layout_width="@dimen/space_40dp"
                    android:layout_height="@dimen/space_40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_leader_board" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/space_16dp"
                    android:layout_toEndOf="@+id/leader_board_icon"
                    android:text="View Leaderboard"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_body_2" />

                <ImageView
                    android:id="@+id/next_icon"
                    android:layout_width="@dimen/space_24dp"
                    android:layout_height="@dimen/space_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_navigate_next" />
            </RelativeLayout>

            <View
                android:id="@+id/underline_view_leader_board_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1dp"
                android:layout_below="@+id/view_leader_board_button"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:background="@color/line" />

            <!-- Frame recycler view records -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/underline_view_leader_board_button"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/list_item_record" />

            </androidx.cardview.widget.CardView>

            <!-- Frame content -->
            <RelativeLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/frame_toolbar"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <!-- Frame total running distance-->
                <FrameLayout
                    android:id="@+id/card_view_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/frame_event_detail">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_total_running_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="8dp">


                        <com.think.runex.java.Customize.Views.xStatFrame
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_stat"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingHorizontal="22dp"
                            android:paddingVertical="22dp">

                            <TextView
                                android:id="@+id/_v_total_running_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ระยะสะสม"
                                android:textColor="@android:color/white"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/_lb_total_running_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="@android:color/white"
                                android:textSize="42dp" />

                        </com.think.runex.java.Customize.Views.xStatFrame>

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/btn_add_activity"
                            android:layout_width="@dimen/space_24dp"
                            android:layout_height="@dimen/space_24dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/space_8dp"
                            android:layout_marginEnd="@dimen/space_8dp"
                            android:background="@drawable/shape_btn_add_activity"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_plus" />

                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <!-- Frame event detail -->
                <LinearLayout
                    android:id="@+id/frame_event_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp">

                        <com.think.runex.java.Customize.Views.xSquareImage
                            android:id="@+id/event_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            app:civ_border_color="@color/grey"
                            app:civ_border_width="1dp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/detail_lb_event_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="@dimen/space_8dp"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Event Name"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btn_history"
                        android:layout_width="@dimen/space_32dp"
                        android:layout_height="@dimen/space_32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/space_12dp"
                        android:background="@android:color/transparent"
                        android:foreground="?selectableItemBackground"
                        android:padding="@dimen/space_4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_record" />


                </LinearLayout>

            </RelativeLayout>

            <!-- Frame toolbar -->
            <include
                android:id="@+id/frame_toolbar"
                layout="@layout/frame_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Frame display fragment -->
    <FrameLayout
        android:id="@+id/display_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>