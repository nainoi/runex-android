<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_preview_image"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content">

            <com.think.runex.java.Customize.xSquareImage
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/err_screen" />

        </FrameLayout>

        <!--    Right hand    -->
        <LinearLayout
            android:id="@+id/frame_right_hand"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <!-- Section one -->
            <LinearLayout
                android:id="@+id/frame_section_one"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/v_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/input_note"
                    android:hint="ข้อความ"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/background_text_input_v1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Section two -->
            <LinearLayout
                android:id="@+id/frame_section_two"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!-- Distance -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <!-- Distance label -->
                    <LinearLayout
                        android:id="@+id/frame_v_distance"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/v_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/star_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@android:color/holo_red_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/frame_symbol_distance"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:background="@drawable/background_white_with_4_corners_gray_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_distance"
                            android:hint="ระยะทาง"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:background="@android:color/transparent"
                            android:layout_width="0dp"
                            android:digits=".01234567890"
                            android:text="0.00"
                            android:layout_weight="1.6"
                            android:textSize="18dp"
                            android:maxLines="1"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/symbol_distance"
                            android:hint="KM"
                            android:paddingLeft="4dp"
                            android:digits="01234567890"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="1dp"
                            android:paddingRight="4dp"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:background="@drawable/background_symbol_right_v1"
                            android:layout_width="0dp"
                            android:layout_weight=".4"
                            android:maxLines="1"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:id="@+id/frame_submit_date"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="4dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/v_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/input_date"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:textSize="18dp"
                        android:text="1991/11/05"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp"
                        android:textColor="@android:color/black"
                        android:background="@drawable/background_white_with_4_corners_gray_stroke"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Feature buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/frame_feature_buttons"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_submit"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:minHeight="0dp"
                    android:text="ส่งผลวิ่ง"
                    android:textColor="@android:color/white"
                    android:background="@drawable/state_active_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_marginLeft="8dp"
                    android:minHeight="0dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="ยกเลิก"
                    android:background="@drawable/state_inactive_button"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>