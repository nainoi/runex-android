<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--  Event Image -->
    <com.think.runex.java.Customize.Views.xRectangleViewGroup
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/view_cover"
                android:adjustViewBounds="true"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </com.think.runex.java.Customize.Views.xRectangleViewGroup>


    <!--  Contents  -->
    <LinearLayout
        android:id="@+id/frame_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

<!--        <com.think.runex.java.Customize.EventListItem.xEventNameTextView-->
        <TextView
            android:id="@+id/lb_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lb_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="10sp"
            android:text="..."
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lb_event_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            android:text="สำเร็จแล้ว"
            android:textColor="@color/orange"
            android:textStyle="bold" />
        
        <!--  Frame begin registration & Running distance  -->
        <LinearLayout
            android:id="@+id/frame_event_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/frame_begin_registration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.20"
                android:background="@drawable/view_4rounded_corner_with_softgray_background"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/v_begin_registration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="วันเปิดรับสมัคร"
                        android:textColor="#6B6B6B"
                        android:textSize="12dp" />

                </FrameLayout>

                <!--                <com.think.runex.java.Customize.EventListItem.xSmallTextView-->
                <TextView
                    android:id="@+id/lb_begin_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:includeFontPadding="false"
                    android:text="1 ต.ค - 30 พ.ย 2562"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frame_distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@drawable/view_4rounded_corner_with_softgray_background"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/v_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="ระยะวิ่ง"
                        android:textColor="#6B6B6B"
                        android:textSize="12dp" />

                </FrameLayout>

                <!--                <com.think.runex.java.Customize.EventListItem.xSmallTextView-->
                <TextView
                    android:id="@+id/lb_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:includeFontPadding="false"
                    android:text="12 KM"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".10" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>