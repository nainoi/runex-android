<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <!--  Event Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/frame_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0.5"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <com.think.runex.java.Customize.xSquareImage
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/err_screen" />

    </androidx.cardview.widget.CardView>

    <!--  Contents  -->
    <LinearLayout
        android:id="@+id/frame_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lb_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shinchan Virtual Run 2019"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lb_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="VIRTUAL RUN"
            android:textColor="@color/orange"
            android:textStyle="bold" />
        
        <!--  Frame begin registration & Running distance  -->
        <LinearLayout
            android:id="@+id/frame_event_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>



</LinearLayout>