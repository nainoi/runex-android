<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:paddingStart="@dimen/space_16dp"
    android:paddingTop="@dimen/space_8dp"
    android:paddingEnd="@dimen/space_16dp"
    android:paddingBottom="@dimen/space_8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_event_image_width"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@integer/event_image_percent_width" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/event_image_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/space_8dp"
        app:cardCornerRadius="@dimen/space_8dp"
        app:cardElevation="@dimen/space_4dp"
        app:layout_constraintEnd_toEndOf="@+id/guideline_event_image_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.think.runex.component.AspectRatioImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:ratioHeight="1"
            app:ratioWidth="2" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/event_name_label"
        style="@style/Text.BodyHeading.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/event_image_layout"
        android:layout_toEndOf="@+id/event_image_layout"
        android:ellipsize="end"
        android:maxLines="2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_event_image_width"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_category_label"
        style="@style/Text.Body.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_name_label"
        android:layout_marginTop="@dimen/space_4dp"
        android:layout_toEndOf="@+id/event_image_layout"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_event_image_width"
        app:layout_constraintTop_toBottomOf="@+id/event_name_label" />

    <TextView
        android:id="@+id/event_date_label"
        style="@style/Text.Caption.Hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:layout_toEndOf="@+id/event_image_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_event_image_width"
        app:layout_constraintTop_toBottomOf="@+id/event_category_label" />

    <TextView
        android:id="@+id/register_date_label"
        style="@style/Text.Caption.Hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8dp"
        android:layout_toEndOf="@+id/event_image_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_event_image_width"
        app:layout_constraintTop_toBottomOf="@+id/event_date_label" />
</androidx.constraintlayout.widget.ConstraintLayout>