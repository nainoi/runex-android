<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="vertical">

    <com.think.runex.java.Customize.Views.Toolbar.xToolbarImageView
        android:id="@+id/toolbar_navigation_button"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="18dp"
        android:src="@mipmap/ic_navigation_back" />

    <LinearLayout
        android:id="@+id/frame_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_marginHorizontal="?attr/actionBarSize"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/frame_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="8dp">

            <com.think.runex.java.Customize.Views.Toolbar.xToolbarImageView
                android:id="@+id/toolbar_title_icon"
                android:layout_width="@dimen/textParagraphH1"
                android:layout_height="@dimen/textParagraphH1"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/toolbar_title_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSmall"
            android:textStyle="bold" />

    </LinearLayout>

    <com.think.runex.java.Customize.Views.Toolbar.xToolbarImageView
        android:id="@+id/toolbar_options_button"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="right"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:src="@drawable/ic_add" />

    <View
        android:id="@+id/toolbar_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:alpha="0.3"
        android:background="@android:color/darker_gray" />
</FrameLayout>