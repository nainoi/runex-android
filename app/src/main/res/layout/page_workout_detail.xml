<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.Pages.WorkoutDetailPage">

    <!-- Toolbar -->
    <FrameLayout
        android:id="@+id/frame_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/btn_cancel_submit"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close"
            app:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@mipmap/ic_share"
            app:tint="@color/colorAccent" />

    </FrameLayout>

    <!-- Frame map -->
    <FrameLayout
        android:id="@+id/frame_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_toolbar">

        <com.think.runex.java.Customize.Views.xMapViewGroup
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/runex_logo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/im_app_logo" />


        <!-- Frame contents -->
        <FrameLayout
            android:id="@+id/frame_distance_in_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/background_fading_black_vertical"
            android:padding="12dp">

            <!-- Frame distance -->
            <LinearLayout
                android:id="@+id/frame_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/v_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="ระยะทาง"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textContent" />

                <TextView
                    android:id="@+id/lb_distance_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="0.00 กม."
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textParagraphH1" />

            </LinearLayout>

            <!-- Frame duration -->
            <LinearLayout
                android:id="@+id/frame_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/v_duratoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:includeFontPadding="false"
                    android:text="ระยะเวลา"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textContent" />

                <TextView
                    android:id="@+id/lb_duration_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:text="00:00"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textParagraphH1" />

                <TextView
                    android:id="@+id/lb_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <!-- Summary -->
    <FrameLayout
        android:id="@+id/inherit_frame_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame_map"
        android:background="@android:color/white">

        <include
            android:id="@+id/frame_summary"
            layout="@layout/frame_record_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Frame fragment display container -->
    <FrameLayout
        android:id="@+id/display_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>