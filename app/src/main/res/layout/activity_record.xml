<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frame_recording_info"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Time -->
        <TextView
            android:id="@+id/v_time"
            android:textSize="16dp"
            android:text="TIME"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lb_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@android:color/black"
            android:textSize="56dp"
            android:textStyle="bold" />

        <!-- running detail -->
        <LinearLayout
            android:id="@+id/frame_running_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Distance -->
            <LinearLayout
                android:id="@+id/frame_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/v_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/lb_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 KM"
                    android:textColor="@color/orange"
                    android:textSize="18dp" />

            </LinearLayout>

            <!-- Calories-->
            <LinearLayout
                android:id="@+id/frame_calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/v_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/lb_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Calories"
                    android:textColor="@color/orange"
                    android:textSize="18dp" />

            </LinearLayout>

            <!-- Step -->
            <LinearLayout
                android:id="@+id/frame_step"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/v_stemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foot Step"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/lb_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Steps"
                    android:textColor="@color/orange"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame_recording_info" />


    <LinearLayout
        android:id="@+id/frame_controller_buttons"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="START"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:background="@drawable/view_circle_orange"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_marginLeft="12dp"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="PAUSE"
            android:textColor="@color/orange_light"
            android:background="@drawable/view_circle_white"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>