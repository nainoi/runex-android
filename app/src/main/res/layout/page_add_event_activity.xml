<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/v_add_event_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_16dp"
        android:text="@string/add_distance"
        android:textColor="@android:color/black"
        android:textSize="26dp"
        android:textStyle="bold" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/activity_image"
                    android:layout_alignTop="@+id/activity_image"
                    android:layout_alignEnd="@+id/activity_image"
                    android:layout_alignBottom="@+id/activity_image"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_imv_add_distance"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_photo_library" />

                <ImageView
                    android:id="@+id/activity_image"
                    android:layout_width="@dimen/add_distance_imv_width"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/add_distance_margin_start_and_end"
                    android:layout_marginTop="@dimen/add_distance_margin_top"
                    android:layout_marginEnd="@dimen/add_distance_margin_start_and_end"
                    android:adjustViewBounds="true"
                    android:minHeight="300dp"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/btn_add_image"
                    android:layout_width="@dimen/wrap_content"
                    android:layout_height="@dimen/wrap_content"
                    android:layout_alignBottom="@+id/activity_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/space_8dp"
                    android:background="@drawable/shape_btn_add_activity_image"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:minHeight="@dimen/space_32dp"
                    android:paddingStart="@dimen/space_8dp"
                    android:paddingEnd="@dimen/space_8dp">

                    <ImageView
                        android:id="@+id/ic_close"
                        android:layout_width="@dimen/space_24dp"
                        android:layout_height="@dimen/space_24dp"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/space_4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_close"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_add_image"
                        style="@style/TextBodyHeading.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_8dp"
                        android:layout_toEndOf="@+id/ic_close"
                        android:text="@string/add_image" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/btn_date"
                    style="@style/TextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_distance"
                    android:layout_marginStart="@dimen/space_24dp"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_24dp"
                    android:clickable="true"
                    android:hint="@string/running_date" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edt_note"
                    android:layout_marginStart="@dimen/space_24dp"
                    android:layout_marginTop="@dimen/space_24dp"
                    android:layout_marginEnd="@dimen/space_24dp"
                    android:text="@string/submit_result" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_note"
                    style="@style/TextInput.Note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_date"
                    android:layout_marginStart="@dimen/space_24dp"
                    android:layout_marginTop="@dimen/space_16dp"
                    android:layout_marginEnd="@dimen/space_24dp"
                    android:imeOptions="actionDone" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_distance"
                    style="@style/TextInput.Distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_add_image"
                    android:layout_marginStart="@dimen/space_24dp"
                    android:layout_marginTop="@dimen/space_24dp"
                    android:layout_marginEnd="@dimen/space_24dp"
                    android:imeOptions="actionNext" />
            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>