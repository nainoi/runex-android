<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/frame_bottomsheet"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_white_with_top_rounded_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_close"
            android:src="@drawable/ic_close"
            android:padding="18dp"

            android:tint="@android:color/black"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"/>

        <LinearLayout
            android:id="@+id/frame_inputs"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingBottom="48dp"
            android:paddingHorizontal="68dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/v_title"
                android:text="สมัครสมาชิก RUNEX"
                android:textSize="@dimen/textParagraphH3"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:background="@drawable/background_input_field_slim"
                android:hint="ที่อยู่อีเมล"
                android:maxLength="80"
                android:paddingHorizontal="@dimen/textHorizontalPadding"
                android:paddingVertical="@dimen/textVerticalPadding"
                android:singleLine="true"
                android:textSize="@dimen/textSmallInput" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:background="@drawable/background_input_field_slim"
                android:hint="รหัสผ่าน"
                android:maxLength="30"
                android:paddingHorizontal="@dimen/textHorizontalPadding"
                android:paddingVertical="@dimen/textVerticalPadding"
                android:singleLine="true"
                android:textSize="@dimen/textSmallInput" />


            <EditText
                android:id="@+id/input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:background="@drawable/background_input_field_slim"
                android:hint="ยืนยันรหัสผ่าน"
                android:maxLength="30"
                android:paddingHorizontal="@dimen/textHorizontalPadding"
                android:paddingVertical="@dimen/textVerticalPadding"
                android:singleLine="true"
                android:textSize="@dimen/textSmallInput" />


            <EditText
                android:id="@+id/input_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:background="@drawable/background_input_field_slim"
                android:hint="ชื่อ"
                android:maxLength="50"
                android:paddingHorizontal="@dimen/textHorizontalPadding"
                android:paddingVertical="@dimen/textVerticalPadding"
                android:singleLine="true"
                android:textSize="@dimen/textSmallInput" />


            <EditText
                android:id="@+id/input_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:background="@drawable/background_input_field_slim"
                android:hint="นามสกุล"
                android:maxLength="50"
                android:paddingHorizontal="@dimen/textHorizontalPadding"
                android:paddingVertical="@dimen/textVerticalPadding"
                android:singleLine="true"
                android:textSize="@dimen/textSmallInput" />

            <Button
                android:id="@+id/btn_register"
                android:text="สมัครสมาชิก"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/state_active_button"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:paddingVertical="@dimen/buttonVerticalPadding"
                android:paddingHorizontal="@dimen/buttonHorizontalPadding"
                android:layout_width="wrap_content"
                android:textSize="@dimen/textButton"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/v_separator"
                android:layout_marginTop="@dimen/verticalPaddingNoRelate"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>