<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorBackgroundPrimary"
    android:padding="@dimen/space_24dp"
    android:theme="@style/Theme.Runex.Light"
    tools:context=".feature.setting.EnvironmentDialog">

    <TextView
        android:id="@+id/environment_dev_label"
        style="@style/Text.BodyHeading.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:minHeight="@dimen/space_48dp"
        android:text="@string/environment_dev" />

    <View
        android:id="@+id/underline_environment_dev_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/environment_dev_label"
        android:background="@color/line" />

    <TextView
        android:id="@+id/environment_production_label"
        style="@style/Text.BodyHeading.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/underline_environment_dev_label"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:minHeight="@dimen/space_48dp"
        android:text="@string/environment_production" />

</RelativeLayout>