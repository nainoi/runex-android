<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".java.Pages.ReviewEvent.ActiveRegisteredEventCheckerPage">

    <FrameLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:paddingStart="@dimen/space_16dp"
        android:paddingEnd="@dimen/space_16dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/action_bar_icon_size"
            android:layout_height="@dimen/action_bar_icon_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_btn_circle"
            android:padding="@dimen/space_8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_back" />
    </FrameLayout>

    <TextView
        android:id="@+id/v_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_margin="@dimen/space_28dp"
        android:gravity="center"
        android:text="รายการวิ่งทั้งหมดที่จะส่งระยะ"
        android:textColor="@android:color/black"
        android:textSize="@dimen/login_title_size"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@+id/v_title"
        tools:listitem="@layout/list_item_event_send_distance" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        style="@style/ButtonAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/space_28dp"
        android:text="ยืนยันการส่งผล" />

</RelativeLayout>