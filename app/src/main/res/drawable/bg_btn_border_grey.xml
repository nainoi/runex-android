<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple
            android:color="?colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background" />
                    <corners android:radius="@dimen/space_24dp" />
                    <stroke
                        android:width="@dimen/space_1dp"
                        android:color="@color/border" />
                </shape>
            </item>
            <item android:drawable="@drawable/shape_rectangle_border_rounded_24dp" />
        </ripple>
    </item>
    <item android:drawable="@drawable/shape_rectangle_border_rounded_24dp" android:state_enabled="false" />
</selector>