<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple android:color="?colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?colorBackgroundPrimary" />
                    <corners android:radius="@dimen/space_24dp" />
                    <stroke android:width="@dimen/space_1dp" android:color="?colorBorder" />
                </shape>
            </item>
            <item android:drawable="@drawable/shape_rectangle_border_corner_radius_24dp" />
        </ripple>
    </item>
    <item android:drawable="@drawable/shape_rectangle_border_corner_radius_24dp" android:state_enabled="false" />
</selector>