<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.TransparentStatus" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.LoginActivity" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Theme.MaterialComponents.Light.Dialog-->
    <style name="FullScreenDialog" parent="ThemeOverlay.AppCompat.Dialog">

        <!-- Must set windowBackground and windowIsFloating = false for the full screen dialog.-->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsFloating">false</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <!-- Set Status bar color -->
        <!-- <item name="android:statusBarColor">@color/colorPrimary</item>-->

        <!-- Optional -->
        <!-- <item name="android:layout_width">match_parent</item>-->
        <!-- <item name="android:layout_height">match_parent</item>-->
        <!-- <item name="android:windowNoTitle">true</item>-->
    </style>

    <!-- Base Button -->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="ButtonAccent" parent="TextBody2.White">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_body_2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/bg_btn_borderless</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextField">
        <item name="android:textSize">@dimen/text_sub_title</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>

    <style name="TextField.Email" parent="TextField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextField.Password" parent="TextField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextField.Password.Done" parent="TextField.Password">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TextField.Distance" parent="TextField">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/distance_kg</item>
    </style>

    <style name="TextField.Note" parent="TextField">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/note</item>
    </style>
</resources>
