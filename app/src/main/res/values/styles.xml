<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- TextView -->
    <style name="Text" />

    <style name="Text.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="Text.Caption.Thirdly" parent="Text.Caption">
        <item name="android:textColor">?textColorThirdly</item>
    </style>

    <style name="Text.Caption.Hint" parent="Text.Caption">
        <item name="android:textColor">?textColorHint</item>
    </style>

    <style name="Text.Caption.Error" parent="Text.Caption">
        <item name="android:textColor">?textColorError</item>
    </style>

    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="Text.Body.Primary" parent="Text.Body">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="Text.Body.Primary.Bold" parent="Text.Body.Primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body.Secondary" parent="Text.Body">
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="TextBody.Secondary.Bold" parent="Text.Body.Secondary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body.Thirdly" parent="Text.Body">
        <item name="android:textColor">?textColorThirdly</item>
    </style>

    <style name="Text.Body.Hint" parent="Text.Body">
        <item name="android:textColor">?textColorHint</item>
    </style>

    <style name="Text.Body.Accent" parent="Text.Body">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.BodyHeading">
        <item name="android:textSize">@dimen/text_size_body_heading</item>
    </style>

    <style name="Text.BodyHeading.Primary" parent="Text.BodyHeading">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="Text.BodyHeading.Primary.Bold" parent="Text.BodyHeading.Primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.BodyHeading.Secondary" parent="Text.BodyHeading">
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="Text.BodyHeading.Secondary.OnLight" parent="Text.BodyHeading">
        <item name="android:textColor">@color/textColorSecondaryOnLight</item>
    </style>

    <style name="Text.BodyHeading.Secondary.Bold" parent="Text.BodyHeading.Secondary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.BodyHeading.Thirdly" parent="Text.BodyHeading">
        <item name="android:textColor">?textColorThirdly</item>
    </style>

    <style name="Text.BodyHeading.Hint" parent="Text.BodyHeading">
        <item name="android:textColor">?textColorHint</item>
    </style>

    <style name="Text.BodyHeading.White" parent="Text.BodyHeading">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="Text.BodyHeading.White.Bold" parent="Text.BodyHeading.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.BodyHeading.Accent" parent="Text.BodyHeading">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.BodyHeading.Accent.Bold" parent="Text.BodyHeading.Accent">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="Text.SubTitle.Primary" parent="Text.SubTitle">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="Text.SubTitle.Primary.Bold" parent="Text.SubTitle.Primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SubTitle.White" parent="Text.SubTitle">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.Title.Primary" parent="Text.Title">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="Text.Title.Primary.Bold" parent="Text.Title.Primary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Secondary" parent="Text.Title">
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="Text.HeadLine">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Text.HeadLine.Primary" parent="Text.HeadLine">
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="Text.HeadLine.Primary.Bold" parent="Text.HeadLine.Primary">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.HeadLine.Secondary" parent="Text.HeadLine">
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="Text.HeadLine.Accent" parent="Text.HeadLine">
        <item name="android:textColor">?textColorAccent</item>
    </style>

    <style name="Text.HeadLine.Accent.Bold" parent="Text.HeadLine.Accent">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base TextView -->
    <style name="TextBottomBar">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_color_bottom_bar</item>
    </style>

    <!-- Base Text Input -->
    <style name="TextInput">
        <item name="android:textSize">@dimen/text_size_body_heading</item>
        <item name="android:textColorHint">?textColorHint</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
        <item name="android:gravity">center_vertical</item>
        <!--        <item name="android:paddingStart">@dimen/space_16dp</item>-->
        <!--        <item name="android:paddingEnd">@dimen/space_16dp</item>-->
        <item name="android:inputType">text</item>
        <item name="backgroundTint">?colorLine</item>
    </style>

    <style name="TextInput.Bold" parent="TextInput">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base Buttons -->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textSize">@dimen/text_size_body_heading</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body_heading</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_body</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@drawable/selector_text_color_btn_primary</item>
    </style>

    <style name="Button.BorderGrey" parent="Button">
        <item name="android:background">@drawable/bg_btn_border_grey</item>
        <item name="android:textColor">@drawable/selector_text_color_btn_border_grey</item>
    </style>

    <style name="Button.Facebook" parent="Button">
        <item name="android:background">@drawable/bg_btn_facebook</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="Button.ThaiQRPayment" parent="Button">
        <item name="android:background">@drawable/bg_btn_thai_qr_payment</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <!-- Base Icons -->
    <style name="Icon">
        <!-- Noting for now -->
    </style>

    <style name="Icon.BottomBar" parent="Icon">
        <item name="tint">?iconColorSecondary</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="AppBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBackground</item>
    </style>

    <style name="BottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Profile -->
    <style name="Profile">
        <!-- Noting for now -->
    </style>

    <style name="Profile.Image">
        <item name="srcCompat">@mipmap/ic_profile</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>
