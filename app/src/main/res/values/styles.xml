<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.LoginActivity" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ButtonPrice" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">@dimen/space_64dp</item>
        <item name="android:minHeight">@dimen/space_24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="cornerRadius">@dimen/space_12dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ButtonPrice.Free" parent="ButtonPrice">
        <item name="android:textColor">@color/orange</item>
        <item name="cornerRadius">@dimen/space_12dp</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">@dimen/space_1dp</item>
    </style>

    <style name="ButtonAccent" parent="TextBody2.White">
        <item name="android:background">@drawable/bg_btn_accent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonBorderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_body_2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/bg_btn_borderless</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextField">
        <item name="android:textSize">@dimen/text_sub_title</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>

    <style name="TextField.Email" parent="TextField">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextField.Password" parent="TextField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextField.Password.Done" parent="TextField.Password">
        <item name="android:imeOptions">actionDone</item>
    </style>
</resources>
