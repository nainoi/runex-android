<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.TransparentStatus" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.LoginActivity" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!-- Dialog -->
    <style name="AppAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AppAlertDialog.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AppAlertDialog.BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppAlertDialog.PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppAlertDialog.NegativeButtonStyle</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="AppAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppAlertDialog.BodyTextStyle">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppAlertDialog.PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppAlertDialog.NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorHint</item>
        <item name="android:textSize">@dimen/text_body</item>
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Theme.MaterialComponents.Light.Dialog-->
    <style name="FullScreenDialog" parent="ThemeOverlay.AppCompat.Dialog">

        <!-- Must set windowBackground and windowIsFloating = false for the full screen dialog.-->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsFloating">false</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <!-- Set Status bar color -->
        <!-- <item name="android:statusBarColor">@color/colorPrimary</item>-->

        <!-- Optional -->
        <!-- <item name="android:layout_width">match_parent</item>-->
        <!-- <item name="android:layout_height">match_parent</item>-->
        <!-- <item name="android:windowNoTitle">true</item>-->
    </style>

    <!-- Base Button -->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textSize">@dimen/text_body_heading</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_body_heading</item>
        <item name="autoSizeMinTextSize">@dimen/text_body</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@drawable/text_color_btn_primary</item>
    </style>

    <style name="Button.BorderGrey" parent="Button">
        <item name="android:background">@drawable/bg_btn_border_grey</item>
        <item name="android:textColor">@drawable/text_color_btn_border_grey</item>
    </style>

    <!-- Text Input -->
    <style name="TextInput">
        <item name="android:textSize">@dimen/text_body_heading</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>

    <style name="TextInput.Email" parent="TextInput">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextInput.Password" parent="TextInput">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextInput.Password.Done" parent="TextInput.Password">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TextInput.Distance" parent="TextInput">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/distance_kg</item>
    </style>

    <style name="TextInput.Note" parent="TextInput">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/note</item>
    </style>
</resources>
