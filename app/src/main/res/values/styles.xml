<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorBackgroundPrimary">@color/background</item>
        <item name="colorBackgroundSecondary">@color/backgroundSecondary</item>
        <item name="colorBackgroundThirdly">@color/backgroundThirdly</item>

        <item name="colorDisable">@color/disable</item>
        <item name="colorDisableSecondary">@color/disableSecondary</item>
        <item name="colorLine">@color/line</item>
        <item name="colorBorder">@color/border</item>

        <item name="textColorPrimary">@color/textColorPrimary</item>
        <item name="textColorSecondary">@color/textColorSecondary</item>
        <item name="textColorThirdly">@color/textColorThirdly</item>
        <item name="textColorHint">@color/textColorHint</item>
        <item name="textColorError">@color/textColorError</item>
        <item name="textColorAccent">@color/textColorAccent</item>

        <item name="iconColorPrimary">@color/iconColorPrimary</item>
        <item name="iconColorSecondary">@color/iconColorSecondary</item>
        <item name="iconColorDisable">@color/iconColorDisable</item>
        <item name="iconColorAccent">@color/iconColorAccent</item>
    </style>

    <style name="Theme.Runex" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Set windowBackground to dark color for dark mode default.-->
        <!-- <item name="android:windowBackground">@color/backgroundDark</item> -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.Runex.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/backgroundOnLight</item>

        <item name="colorBackgroundPrimary">@color/backgroundOnLight</item>
        <item name="colorBackgroundSecondary">@color/backgroundSecondaryOnLight</item>
        <item name="colorBackgroundThirdly">@color/backgroundThirdlyOnLight</item>

        <item name="colorDisable">@color/disableOnLight</item>
        <item name="colorDisableSecondary">@color/disableSecondaryOnLight</item>
        <item name="colorLine">@color/lineOnLight</item>
        <item name="colorBorder">@color/borderOnLight</item>

        <item name="textColorPrimary">@color/textColorPrimaryOnLight</item>
        <item name="textColorSecondary">@color/textColorSecondaryOnLight</item>
        <item name="textColorThirdly">@color/textColorThirdlyOnLight</item>
        <item name="textColorHint">@color/textColorHintOnLight</item>
        <item name="textColorError">@color/textColorError</item>
        <item name="textColorAccent">@color/textColorAccent</item>

        <item name="iconColorPrimary">@color/iconColorPrimaryOnLight</item>
        <item name="iconColorSecondary">@color/iconColorSecondaryOnLight</item>
        <item name="iconColorDisable">@color/iconColorDisableOnLight</item>
        <item name="iconColorAccent">@color/iconColorAccent</item>

    </style>

    <style name="Theme.Runex.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/backgroundOnDark</item>

        <item name="colorBackgroundPrimary">@color/backgroundOnDark</item>
        <item name="colorBackgroundSecondary">@color/backgroundSecondaryOnDark</item>
        <item name="colorBackgroundThirdly">@color/backgroundThirdlyOnDark</item>

        <item name="colorDisable">@color/disableOnDark</item>
        <item name="colorDisableSecondary">@color/disableSecondaryOnDark</item>
        <item name="colorLine">@color/lineOnDark</item>
        <item name="colorBorder">@color/borderOnDark</item>

        <item name="textColorPrimary">@color/textColorPrimaryOnDark</item>
        <item name="textColorSecondary">@color/textColorSecondaryOnDark</item>
        <item name="textColorThirdly">@color/textColorThirdlyOnDark</item>
        <item name="textColorHint">@color/textColorHintOnDark</item>
        <item name="textColorError">@color/textColorError</item>
        <item name="textColorAccent">@color/textColorAccent</item>

        <item name="iconColorPrimary">@color/iconColorPrimaryOnDark</item>
        <item name="iconColorSecondary">@color/iconColorSecondaryOnDark</item>
        <item name="iconColorDisable">@color/iconColorDisableOnDark</item>
        <item name="iconColorAccent">@color/iconColorAccent</item>
    </style>

    <style name="Theme.Runex.TransparentStatus" parent="Theme.Runex">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Runex.LoginActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/backgroundOnLight</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!-- Dialog -->
    <style name="AppAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/AppAlertDialog.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AppAlertDialog.BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppAlertDialog.PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppAlertDialog.NegativeButtonStyle</item>
        <item name="android:background">?colorBackgroundPrimary</item>
    </style>

    <style name="AppAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_size_sub_title</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppAlertDialog.BodyTextStyle">
        <item name="android:textSize">@dimen/text_size_body_heading</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="AppAlertDialog.PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?textColorPrimary</item>
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppAlertDialog.NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?textColorHint</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Theme.MaterialComponents.Light.Dialog-->
    <style name="FullScreenDialog" parent="ThemeOverlay.AppCompat.Dialog">

        <!-- Must set windowBackground and windowIsFloating = false for the full screen dialog.-->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsFloating">false</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>

        <!-- Set Status bar color -->
        <!-- <item name="android:statusBarColor">@color/colorPrimary</item>-->

        <!-- Optional -->
        <!-- <item name="android:layout_width">match_parent</item>-->
        <!-- <item name="android:layout_height">match_parent</item>-->
        <!-- <item name="android:windowNoTitle">true</item>-->
    </style>

    <!-- Bottom Sheet -->
    <style name="AppBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBackground</item>
    </style>

    <style name="BottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Base Button -->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <!--<item name="android:fontFamily">@font/sukhumvit_set_semi_bold</item>-->
        <item name="android:textSize">@dimen/text_size_body_heading</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:minHeight">@dimen/button_height_default</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">@dimen/text_size_body_heading</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_body</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@drawable/selector_text_color_btn_primary</item>
    </style>

    <style name="Button.Text" parent="Button">
        <item name="android:background">@drawable/bg_btn_text</item>
        <item name="android:textColor">@drawable/selector_text_color_btn_text</item>
    </style>

    <style name="Button.BorderGrey" parent="Button">
        <item name="android:background">@drawable/bg_btn_border_grey</item>
        <item name="android:textColor">@drawable/selector_text_color_btn_border_grey</item>
    </style>

    <style name="Button.Facebook" parent="Button">
        <item name="android:background">@drawable/bg_btn_facebook</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <!-- Text Input -->
    <style name="TextInput">
        <item name="android:textSize">@dimen/text_size_body_heading</item>
        <item name="android:textColorHint">?textColorHint</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:minHeight">@dimen/space_48dp</item>
        <item name="android:gravity">center_vertical</item>
        <!--        <item name="android:paddingStart">@dimen/space_16dp</item>-->
        <!--        <item name="android:paddingEnd">@dimen/space_16dp</item>-->
        <item name="android:inputType">text</item>
        <item name="backgroundTint">?colorLine</item>
    </style>

    <style name="TextInput.Bold" parent="TextInput">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInput.Distance" parent="TextInput">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/distances_kg</item>
    </style>

    <style name="TextInput.Note" parent="TextInput">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/note</item>
    </style>

    <!-- Icon -->
    <style name="Icon">
        <!-- Noting for now -->
    </style>

    <style name="Icon.Primary" parent="Icon">
        <item name="tint">?iconColorPrimary</item>
    </style>

    <style name="Icon.Secondary" parent="Icon">
        <item name="tint">?iconColorSecondary</item>
    </style>

    <style name="Icon.Disable" parent="Icon">
        <item name="tint">?iconColorDisable</item>
    </style>

    <style name="Icon.BottomBar" parent="Icon">
        <item name="tint">?iconColorSecondary</item>
    </style>

    <!-- Images -->
    <style name="Image">
        <!-- Noting for now -->
    </style>

    <style name="Image.Profile">
        <item name="srcCompat">@mipmap/ic_profile</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>
